doctype html

html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		meta(name='application-name' content='CherryPick')
		meta(name='referrer' content='origin')
		title Error: CherryPick
		style
			include ../error.css

	script
		include ../error.js

body
	svg(class='icon')
		use(xlink:href='#icon-warning')
	h1(data-i18n='title')
	p(data-i18n='serverError' v-if='SERVER_ERROR')
	p(v-if='SERVER_ERROR') ERROR CODE: {{ errorId }}
	details
		summary(data-i18n='solution')
		ul
			li
				a(href='https://github.com/misskey-dev/misskey/wiki/Troubleshooting#%E3%83%87%E3%82%B9%E3%82%AF%E3%83%88%E3%83%83%E3%83%97%E3%82%A2%E3%83%97%E3%83%AA%E7%89%88%E3%81%A7%E3%83%AD%E3%82%B0%E3%82%A4%E3%83%B3%E3%81%A7%E3%81%8D%E3%81%AA%E3%81%84%E5%A0%B4%E5%90%88' target='_blank' rel='noopener') data-i18n='solution1')
			li(data-i18n='solution2')
			li(data-i18n='solution3')
			li(data-i18n='solution4')
	details(v-if='SERVER_ERROR')
		summary(data-i18n='otherOption')
		button(class='button-big' onclick='location.reload(true);' data-i18n-reload)
		button(class='button-big' onclick='localStorage.clear();location.reload(true);' data-i18n='otherOption1')
		button(class='button-big' onclick='location.href="/flush";' data-i18n='otherOption2')
		button(class='button-big' onclick='location.href="/cli";' data-i18n='otherOption3')
